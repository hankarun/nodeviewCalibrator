{
  "name": "nodeviewcalibrator",
  "version": "1.0.0",
  "description": "A blank Electron application",
  "main": "main.js",
  "scripts": {
    "start-web": "node web/server.js",
    "start": "electron .",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --win"
  },
  "keywords": [
    "electron"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "electron": "^35.1.4",
    "electron-builder": "^24.4.0"
  },
  "dependencies": {
    "express": "^4.21.2"
  },
  "build": {
    "appId": "com.yourcompany.nodeviewcalibrator",
    "productName": "Node View Calibrator",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!dist",
      "!build",
      "!**/.vscode",
      "!**/.idea",
      "!**/.vs",
      "!**/.github",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.gitignore,.npmignore}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "app-icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Node View Calibrator"
    },
    "forceCodeSigning": false
  }
}
